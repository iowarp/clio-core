    INFO("Found blob: " << pair.first << "/" << pair.second);
    if (pair.first == "user_data" && 
        pair.second.find("blob_") != std::string::npos && 
        pair.second.find(".dat") != std::string::npos) {
      dat_blob_count++;
    }
  }
  CHECK(dat_blob_count >= 2);
}

